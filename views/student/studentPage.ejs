<!-- views/studentHome.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Dashboard</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100">
    <nav class="bg-blue-600 p-4 text-white">
      <div class="container mx-auto flex justify-between items-center">
        <h1 class="text-2xl font-bold">Student Portal</h1>
        <form action="/logout" method="get">
          <button
            type="submit"
            class="bg-blue-500 hover:bg-blue-700 px-4 py-2 rounded"
          >
            Logout
          </button>
        </form>
      </div>
    </nav>

    <main class="container mx-auto mt-8 px-4">
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-3xl font-bold text-gray-800 mb-6">
          Welcome, <%= student.name %>!
        </h2>

        <div class="grid md:grid-cols-2 gap-6">
          <!-- Student Information Card -->
          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-xl font-semibold mb-4 text-gray-700">
              Student Details
            </h3>
            <div class="space-y-3">
              <!-- <div>
                <label class="block text-gray-600 text-sm">Student ID</label>
                <p class="font-medium"><%= student._id %></p>
              </div> -->
              <div>
                <label class="block text-gray-600 text-sm">Full Name</label>
                <p class="font-medium"><%= student.name %></p>
              </div>
              <div>
                <label class="block text-gray-600 text-sm">Email</label>
                <p class="font-medium"><%= student.email %></p>
              </div>
              <div>
                <label class="block text-gray-600 text-sm">Grade</label>
                <p class="font-medium"><%= student.grade %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
